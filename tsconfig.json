{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./build",
    "./coverage",
    "./node_modules",
    "**/*.spec.ts"
  ]
}